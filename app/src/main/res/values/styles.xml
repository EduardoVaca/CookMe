<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="RecipeTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.EasyCook.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.EasyCook.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo_title</item>
    </style>

    <style name="PagerTitleStripTextAppearance">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DetailViewNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo_title</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>




    </style>


    <style name="splash" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/ColorPrimary</item>

    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
